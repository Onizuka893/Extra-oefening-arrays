<Window x:Class="Extra_oefening_arrays.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Extra_oefening_arrays"
        mc:Ignorable="d"
        Title="Extra oefening Array" Height="450" Width="450">
    <Grid>
        <StackPanel Margin="40 60">
            <WrapPanel HorizontalAlignment="Center">
                <Label Content="Salaris" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtSalaris" IsEnabled="False" Width="100" Height="25" Margin="10 5"/>
                <Button x:Name="BtnUpdate" IsEnabled="False" Content="Update" Width="100" Margin="10 5" Click="BtnUpdate_Click"/>
            </WrapPanel>
            <ListBox x:Name="LstMedewerkers" Height="150" SelectionChanged="LstMedewerkers_SelectionChanged" Width="200" Margin="70 10"/>
            <Label Name="LblError" Content="Geen Errors" Margin="40 0 0 0"/>
        </StackPanel>
    </Grid>
</Window>
